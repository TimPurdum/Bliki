<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="/home">Bliki</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <h1>Sections</h1>
    <ul class="nav flex-column" style="border-bottom: 1px solid white;">
        @foreach (var meta in CurrentPageHeaders)
        {
            <li class="nav-item px-3">
                <a class="nav-link" href="@($"{_previousUri}/{meta.PageLink}")">
                    @(meta.Title)
                </a>
            </li>
        }
    </ul>

    <h1>Pages</h1>
    <ul class="nav flex-column">
        @foreach (var meta in PageMetas)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="@($"/{meta.PageLink}")">
                    @(meta.Title)
                </NavLink>
            </li>
        }
        <LoginDisplay />
    </ul>
</div>

